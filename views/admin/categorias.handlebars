<div class="card-produtos">

  <a href="/admin/categorias/add"><button class="btn btn-success">Cadastrar
      produto</button></a>

</div>


<h2>Lista de Produtos: </h2>
{{#each categorias}}

  <div class="card mt-4">
    <div class="card-body">
      <h4>{{nome}}</h4>
      <small>R$ {{preco}}</small>

      <br />
      <a href="/admin/categorias/edit/{{_id}}"><button
          class="btn btn-success mt-2"
        >Editar produto</button></a>
      <form action="/admin/categorias/deletar" method="post">
        <input type="hidden" name="id" value="{{_id}}" />
        <button type="submit" class="btn btn-danger mt-2">Apagar produto</button>
      </form>
    </div>

  </div>

{{else}}

{{/each}}


<link rel="stylesheet" href="/css/categorias.css">